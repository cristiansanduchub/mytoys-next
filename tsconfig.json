{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./src",
        "paths": {
            "@app/home": ["app/home/src/index.ts"],
            "@packages/debug": ["packages/debug/src/index.ts"],
            "@packages/scaffolding": ["features/scaffolding/src/index.ts"],
            "@pages/*": ["pages/*"],
            "@styles/*": ["styles/*"],
            "@typings/*": ["typings/*"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
